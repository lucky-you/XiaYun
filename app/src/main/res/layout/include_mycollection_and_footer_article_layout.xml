<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginRight="@dimen/spacing_16"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_good_check"
            android:layout_width="@dimen/spacing_20"
            android:layout_height="@dimen/spacing_20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/select_shop_car_all_check"
            android:button="@null"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/iv_good_imageView"
            android:layout_width="@dimen/spacing_111"
            android:layout_height="@dimen/spacing_111"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_6"
            android:layout_marginLeft="@dimen/spacing_12"
            android:layout_marginTop="@dimen/spacing_6"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_good_default_image" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_12"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_article_name"
                style="@style/TextViewStyleOf14Sp"
                android:text="@string/good_text_name"
                android:textSize="@dimen/tv_13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_29">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_article_imageView"
                        android:layout_width="@dimen/spacing_29"
                        android:layout_height="@dimen/spacing_29"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_user_default_header" />

                    <TextView
                        android:id="@+id/tv_Room_clerk_name"
                        style="@style/TextViewStyleOf14Sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing_12"
                        android:text="@string/app_name"
                        android:textColor="@color/color_3f3f3f_black"
                        android:textSize="@dimen/tv_12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_Room_clerk_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_fabulous_click_icon" />

                    <TextView
                        android:id="@+id/tv_Room_clerk_number"
                        style="@style/TextViewStyleOf14Sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing_12"
                        android:gravity="center"
                        android:text="12"
                        android:textSize="@dimen/tv_12sp" />

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
