<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_shop_car_bottom_delete_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="gone">

    <!--购物车底部删除 和 我的收藏底部删除公用的布局-->

    <View style="@style/DivideLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_50"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:id="@+id/ll_delete_all_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_16"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/cb_delete_select"
                    android:layout_width="@dimen/spacing_20"
                    android:layout_height="@dimen/spacing_20"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/select_shop_car_all_check"
                    android:button="@null" />


                <TextView
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_10"
                    android:text="@string/Future_generations"
                    android:textSize="@dimen/tv_13sp" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_Delete_the_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/color_ddd"
            android:gravity="center"
            android:text="@string/Delete_the_goods"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_16sp" />


    </LinearLayout>


</LinearLayout>
