<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_90"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_Logistics_company_logo"
            android:layout_width="@dimen/spacing_55"
            android:layout_height="@dimen/spacing_55"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_16"
            android:src="@drawable/ic_good_default_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_15"
            android:layout_marginRight="@dimen/spacing_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Logistics_company_name"
                style="@style/TextViewStyleOf14Sp"
                android:text="@string/Logistics_company_name"
                android:textColor="@color/color_3f3f3f_black"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_The_official_phone"
                style="@style/TextViewStyleOf14Sp"
                android:layout_marginTop="@dimen/spacing_8"
                android:text="@string/The_official_phone"
                android:textColor="@color/color_3f3f3f_black"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_Logistics_single_number_two"
                style="@style/TextViewStyleOf14Sp"
                android:layout_marginTop="@dimen/spacing_8"
                android:text="@string/Logistics_single_number_two"
                android:textColor="@color/color_3f3f3f_black"
                android:textSize="@dimen/tv_13sp" />


        </LinearLayout>


    </LinearLayout>


    <View style="@style/DivideLIneStyleOf12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_8" />
</LinearLayout>
