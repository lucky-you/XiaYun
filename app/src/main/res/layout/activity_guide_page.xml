<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />


    <TextView
        android:id="@+id/bt_start_main"
        android:layout_width="@dimen/spacing_260"
        android:layout_height="@dimen/spacing_44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_40"
        android:background="@drawable/shape_welcome_button_background"
        android:gravity="center"
        android:text="@string/Experience_immediately"
        android:textColor="@color/color_e53d3d"
        android:textSize="@dimen/tv_16sp"
        android:visibility="gone" />
</RelativeLayout>