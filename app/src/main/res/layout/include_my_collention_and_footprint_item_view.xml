<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginRight="@dimen/spacing_16"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_good_check"
            android:layout_width="@dimen/spacing_20"
            android:layout_height="@dimen/spacing_20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/select_shop_car_all_check"
            android:button="@null"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="@dimen/spacing_110"
            android:layout_height="@dimen/spacing_110"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/spacing_8">

            <ImageView
                android:id="@+id/iv_good_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_good_default_image"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/ic_commodity_failed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_commodity_failed"
                android:visibility="gone" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_good_name"
                style="@style/TextViewStyleOf14Sp"
                android:text="@string/good_text_name"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_good_describe"
                style="@style/TextViewStyleOf14Sp"
                android:text="@string/the_text_specifications"
                android:textColor="@color/color_9f9f9f_black"
                android:textSize="@dimen/tv_11sp" />


            <TextView
                android:id="@+id/tv_good_price"
                style="@style/TextViewStyleOf14Sp"
                android:layout_centerVertical="true"
                android:text="@string/the_price"
                android:textColor="@color/color_3f3f3f_black"
                android:textSize="@dimen/tv_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_The_member_price"
                    style="@style/TextViewStyleOf14Sp"
                    android:gravity="center_vertical"
                    android:text="@string/the_price"
                    android:textColor="@color/color_f3683f"
                    android:textSize="@dimen/tv_13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_home_good_plus" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
