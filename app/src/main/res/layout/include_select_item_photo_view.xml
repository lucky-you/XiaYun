<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_5dp_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Photo_albums"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_42"
            android:gravity="center"
            android:text="@string/Photo_albums_to_obtain"
            android:textColor="@color/color_e53d3d"
            android:textSize="@dimen/tv_15sp" />

        <View
            style="@style/DivideLineStyle"
            android:layout_marginLeft="@dimen/spacing_10"
            android:layout_marginRight="@dimen/spacing_10" />

        <TextView
            android:id="@+id/tv_Take_pictures"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_42"
            android:gravity="center"
            android:text="@string/Take_pictures"
            android:textColor="@color/color_e53d3d"
            android:textSize="@dimen/tv_15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_42"
        android:layout_marginTop="@dimen/spacing_10"
        android:background="@drawable/shape_white_5dp_background"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/color_666"
        android:textSize="@dimen/tv_15sp" />
</LinearLayout>
