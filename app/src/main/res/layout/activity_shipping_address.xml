<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <include layout="@layout/include_titlebar_layout" />

    <View style="@style/DivideLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_f3f3f3"
        android:orientation="vertical">

        <include layout="@layout/include_smartrefresh_layout" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_The_new_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_44"
        android:background="@color/color_e53d3d"
        android:gravity="center"
        android:text="@string/The_new_address"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_16sp" />

</LinearLayout>
