<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/civ_gift_imageVIew"
        android:layout_marginTop="-40dp"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_close_dialog"
            android:layout_width="@dimen/spacing_30"
            android:layout_height="@dimen/spacing_30"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/spacing_8"
            android:layout_marginTop="@dimen/spacing_4">

            <ImageView
                android:layout_width="@dimen/spacing_12"
                android:layout_height="@dimen/spacing_12"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_sign_close" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_Check_in_successfully_get_money"
            style="@style/TextViewStyleOf14Sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_6"
            android:text="@string/Check_in_successfully_get_money"
            android:textColor="@color/color_3f3f3f_black"
            android:textSize="@dimen/tv_20sp" />

        <TextView
            android:id="@+id/tv_Three_days_in_row_plus_bonus"
            style="@style/TextViewStyleOf14Sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_34"
            android:text="@string/Three_days_in_row_plus_bonus"
            android:textSize="@dimen/tv_16sp" />

        <TextView
            android:id="@+id/tv_Share_immediately"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:layout_marginBottom="@dimen/spacing_14"
            android:layout_marginLeft="@dimen/spacing_16"
            android:layout_marginRight="16dp"
            android:layout_marginTop="@dimen/spacing_34"
            android:background="@color/color_e53d3d"
            android:gravity="center"
            android:text="@string/Share_immediately"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_14sp" />

        <LinearLayout
            android:id="@+id/ll_Share_WeChat_receive_the_above_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_10"
            android:orientation="horizontal"
            android:visibility="visible">

            <View
                android:layout_width="@dimen/spacing_36"
                android:layout_height="@dimen/spacing_1"
                android:layout_gravity="center_vertical"
                android:background="@color/color_9f9f9f_black" />

            <TextView
                style="@style/TextViewStyleOf14Sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_10"
                android:layout_marginRight="@dimen/spacing_10"
                android:gravity="center"
                android:text="@string/Share_WeChat_receive_the_above_reward" />

            <View
                android:layout_width="@dimen/spacing_36"
                android:layout_height="@dimen/spacing_1"
                android:layout_gravity="center_vertical"
                android:background="@color/color_9f9f9f_black" />


        </LinearLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_gift_imageVIew"
        android:layout_width="@dimen/spacing_80"
        android:layout_height="@dimen/spacing_80"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_qdj" />

</RelativeLayout>
