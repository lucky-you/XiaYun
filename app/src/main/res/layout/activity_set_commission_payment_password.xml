<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <include layout="@layout/include_titlebar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/spacing_36"
        android:layout_marginRight="@dimen/spacing_36"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_30"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_the_lock" />

                <TextView
                    android:id="@+id/tv_Set_the_password"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_10"
                    android:text="@string/Set_the_password"
                    android:textColor="@color/color_3f3f3f_black" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_Set_the_password"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:hint="@string/Six_figures"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textColorHint="@color/color_9f9f9f_black" />


            <RelativeLayout
                android:id="@+id/rl_Set_the_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/iv_Set_the_password_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye_close" />
            </RelativeLayout>


        </LinearLayout>


        <View
            style="@style/DivideLineStyle"
            android:layout_marginTop="@dimen/spacing_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_30"
            android:layout_marginTop="@dimen/spacing_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_the_lock" />

                <TextView
                    android:id="@+id/tv_Input_again"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_10"
                    android:text="@string/Input_again"
                    android:textColor="@color/color_3f3f3f_black" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_Input_again"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:hint="@string/Six_figures"
                android:inputType="numberPassword"
                android:maxLength="6" />


            <RelativeLayout
                android:id="@+id/rl_Input_again"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/iv_Input_again_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye_close" />
            </RelativeLayout>

        </LinearLayout>


        <View
            style="@style/DivideLineStyle"
            android:layout_marginTop="@dimen/spacing_10" />


        <TextView
            android:id="@+id/tv_Forget_the_original_password"
            style="@style/TextViewStyleOf14Sp"
            android:layout_height="@dimen/spacing_30"
            android:layout_gravity="right"
            android:text="@string/Forget_the_original_password"
            android:textColor="@color/color_9f9f9f_black"
            android:textSize="@dimen/tv_11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_determine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:layout_marginLeft="@dimen/spacing_20"
            android:layout_marginRight="@dimen/spacing_20"
            android:layout_marginTop="@dimen/spacing_90"
            android:background="@drawable/shape_login_red_button_background"
            android:gravity="center"
            android:text="@string/determine"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_16sp" />
    </LinearLayout>


</RelativeLayout>