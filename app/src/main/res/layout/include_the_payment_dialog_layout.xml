<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginRight="@dimen/spacing_16"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_40">

            <TextView
                style="@style/TextViewStyleOf14Sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/Immediate_payment_two"
                android:textColor="@color/color_3f3f3f_black"
                android:textSize="@dimen/tv_16sp" />


            <RelativeLayout
                android:id="@+id/rl_close_dialog"
                android:layout_width="@dimen/spacing_40"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_sign_close" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_total_money"
            style="@style/TextViewStyleOf14Sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/the_price"
            android:textColor="@color/color_3f3f3f_black"
            android:textSize="@dimen/tv_20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgPayBottoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_20"
            android:gravity="center"
            android:orientation="vertical">


            <RadioButton
                android:id="@+id/rb_Commission_deduction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_40"
                android:background="@color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/ic_balance_payment_block"
                android:drawablePadding="@dimen/spacing_10"
                android:drawableRight="@drawable/select_pay_type_background"
                android:text="@string/Commission_deduction"
                android:textColor="@color/color_3f3f3f_black"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_the_alipay_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_40"
                android:background="@color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/ic_zfb_payment_block"
                android:drawablePadding="@dimen/spacing_10"
                android:drawableRight="@drawable/select_pay_type_background"
                android:text="@string/the_alipay_pay"
                android:textColor="@color/color_3f3f3f_black"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_the_WeChat_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_40"
                android:background="@color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/ic_wx_payment_block"
                android:drawablePadding="@dimen/spacing_10"
                android:drawableRight="@drawable/select_pay_type_background"
                android:text="@string/the_WeChat_pay"
                android:textColor="@color/color_3f3f3f_black"
                android:textSize="14sp" />
        </RadioGroup>


        <TextView
            android:id="@+id/tv_Confirm_the_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:layout_marginBottom="@dimen/spacing_20"
            android:layout_marginTop="@dimen/spacing_20"
            android:background="@color/color_ddd"
            android:gravity="center"
            android:text="@string/Confirm_the_payment"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_16sp" />
    </LinearLayout>


</LinearLayout>
