<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/withdrawal_subsidiary_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_40"
        app:tl_indicator_color="@color/color_e53d3d"
        app:tl_indicator_corner_radius="@dimen/spacing_2"
        app:tl_indicator_height="@dimen/spacing_4"
        app:tl_indicator_margin_bottom="@dimen/spacing_4"
        app:tl_indicator_width="@dimen/spacing_30"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/color_3f3f3f_black"
        app:tl_textUnselectColor="@color/color_9f9f9f_black" />

    <View
        android:id="@+id/DivDe_Line"
        style="@style/DivideLineStyle"
        android:layout_marginTop="@dimen/spacing_2" />

    <android.support.v4.view.ViewPager
        android:id="@+id/withdrawal_subsidiary_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f3f3f3"
        android:overScrollMode="never"
        android:scrollbars="none" />

</LinearLayout>
