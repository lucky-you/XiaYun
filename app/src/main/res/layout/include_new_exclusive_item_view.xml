<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rl_member_center_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_coupon_available_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_8"
            android:layout_marginTop="@dimen/spacing_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_coupons_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="50"
                android:textColor="@color/white"
                android:textSize="60sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_14"
                    android:text="全场通用"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_16sp" />

                <TextView
                    android:id="@+id/tv_Full_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满%s元可用"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_18"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Validity_delay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="有限期:2018.8.12"
                android:textColor="@color/color_6f6f6f_black"
                android:textSize="@dimen/spacing_11" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_Immediately_to_receive"
                style="@style/TextViewStyleOf14Sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/spacing_8"
                android:text="@string/Immediately_to_receive"
                android:textColor="@color/font_red"
                android:textSize="@dimen/tv_14sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
