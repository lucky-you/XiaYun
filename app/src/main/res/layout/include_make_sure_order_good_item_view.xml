<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/include_good_public_item_view_layout" />

    <View style="@style/DivideStyleOfColorDDD" />

    <LinearLayout
        style="@style/RelativeLayoutStyleOf44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextViewStyleOf14Sp"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="@string/In_distribution"
            android:textColor="@color/color_3f3f3f_black" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_1"
            android:layout_gravity="center_vertical"
            android:layout_weight="6" />

        <TextView
            android:id="@+id/tv_In_distribution_type"
            style="@style/TextViewStyleOf14Sp"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="right"
            android:textColor="@color/color_3f3f3f_black" />


    </LinearLayout>

    <View style="@style/DivideStyleOfColorDDD" />

    <LinearLayout style="@style/RelativeLayoutStyleOf44dp">

        <TextView
            style="@style/TextViewStyleOf14Sp"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="@string/Buyer_message"
            android:textColor="@color/color_3f3f3f_black" />

        <EditText
            android:id="@+id/edit_Message_prompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:background="@null"
            android:hint="@string/Message_prompt"
            android:maxLength="12"
            android:singleLine="true"
            android:textColorHint="@color/color_ddd"
            android:textCursorDrawable="@color/color_3f3f3f_black"
            android:textSize="@dimen/tv_14sp" />

    </LinearLayout>

    <View
        android:id="@+id/Divide_line"
        style="@style/DivideStyleOfColorDDD" />
</LinearLayout>
