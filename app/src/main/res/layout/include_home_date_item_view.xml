<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_48"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_10"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <com.goulala.view.RoundImageView
            android:id="@+id/riv_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            app:border_color="@color/color_f2f2f2"
            app:border_width="1dp"
            app:type="circle" />


        <TextView
            android:id="@+id/tv_title"
            style="@style/TextViewBodyStyleOf15sp"
            android:layout_marginLeft="@dimen/spacing_8"
            android:layout_gravity="center_vertical"
            android:text="@string/app_name" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_rate"
        style="@style/TextViewBodyStyleOf15sp"
        android:layout_marginRight="@dimen/spacing_10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/app_name" />
</RelativeLayout>
