<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_44"
    android:layout_marginTop="@dimen/spacing_20">


    <RelativeLayout
        android:id="@+id/rl_shop_car_back"
        android:layout_width="@dimen/spacing_40"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_16"
        android:visibility="gone">


        <ImageView
            android:layout_width="@dimen/spacing_8"
            android:layout_height="@dimen/spacing_16"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_left" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_shop_car_bag_title"
        style="@style/TextViewStyleOf14Sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/shop_car_bag"
        android:textColor="@color/color_3f3f3f_black"
        android:textSize="@dimen/tv_18sp" />

    <TextView
        android:id="@+id/tv_The_editor"
        style="@style/TextViewStyleOf14Sp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/spacing_16"
        android:gravity="center"
        android:text="@string/The_editor" />

</RelativeLayout>
