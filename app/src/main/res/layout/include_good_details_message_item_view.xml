<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_36"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="@string/The_service_information"
            android:textColor="@color/color_9f9f9f_black"
            android:textSize="@dimen/tv_13sp" />

        <TextView
            android:id="@+id/tv_message_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:textColor="@color/color_9f9f9f_black"
            android:textSize="@dimen/tv_13sp" />

    </LinearLayout>

    <View
        android:id="@+id/dotted_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_2"
        android:background="@drawable/shape_dotted_line_background"
        android:layerType="software" />
</LinearLayout>
