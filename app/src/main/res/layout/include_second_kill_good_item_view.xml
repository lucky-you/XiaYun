<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_10"
    android:layout_marginRight="@dimen/spacing_10"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/spacing_111"
            android:layout_height="@dimen/spacing_111">

            <ImageView
                android:id="@+id/tv_good_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_good_default_image" />

            <ImageView
                android:id="@+id/iv_have_sale_off"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pic_commodity_so"
                android:visibility="gone" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_good_name"
                style="@style/TextViewStyleOf14Sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/good_text_name"
                android:textSize="@dimen/tv_13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_Present_price"
                            style="@style/TextViewStyleOf14Sp"
                            android:text="@string/the_price"
                            android:textColor="@color/color_3f3f3f_black"
                            android:textSize="@dimen/tv_16sp" />

                        <TextView
                            android:id="@+id/tv_original_price"
                            style="@style/TextViewStyleOf14Sp"
                            android:layout_marginLeft="@dimen/spacing_8"
                            android:text="@string/the_price"
                            android:textColor="@color/color_9f9f9f_black"
                            android:textSize="@dimen/tv_12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_member_price"
                            style="@style/TextViewStyleOf14Sp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/the_price"
                            android:textSize="@dimen/tv_13sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_home_good_plus" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_have_sold_number"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/have_sold"
                    android:textColor="@color/color_6f6f6f_black"
                    android:textSize="@dimen/tv_11sp" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/Divide_line"
        style="@style/DivideLineStyle"
        android:layout_marginBottom="@dimen/spacing_6"
        android:layout_marginTop="@dimen/spacing_6" />


</LinearLayout>
