<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginRight="@dimen/spacing_16"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_15">

            <TextView
                android:id="@+id/tv_The_consignee_name"
                style="@style/TextViewStyleOf14Sp"
                android:layout_gravity="center_vertical"
                android:text="@string/The_consignee"
                android:textColor="@color/color_3f3f3f_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/spacing_50"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_mobil"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="130****1234"
                    android:textColor="@color/color_3f3f3f_black" />

                <TextView
                    android:id="@+id/tv_is_default_address"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_width="@dimen/spacing_36"
                    android:layout_height="@dimen/spacing_16"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_12"
                    android:background="@drawable/shape_welcome_button_background"
                    android:gravity="center"
                    android:text="@string/default_text"
                    android:textColor="@color/color_e53d3d"
                    android:textSize="@dimen/tv_12sp" />

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_Shipping_address"
            style="@style/TextViewStyleOf14Sp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_15"
            android:text="@string/Shipping_address"
            android:textColor="@color/color_3f3f3f_black" />

        <View
            style="@style/DivideLineStyle"
            android:layout_marginTop="@dimen/spacing_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44">

            <LinearLayout
                android:id="@+id/ll_Set_to_the_default"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Set_to_the_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/select_shop_car_all_check"
                    android:button="@null" />

                <TextView
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_5"
                    android:text="@string/Set_to_the_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_edit_address"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_address_edit"
                    android:drawablePadding="@dimen/spacing_5"
                    android:gravity="center"
                    android:text="@string/The_editor" />

                <TextView
                    android:id="@+id/tv_delete_address"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_16"
                    android:drawableLeft="@drawable/ic_address_delete"
                    android:drawablePadding="@dimen/spacing_5"
                    android:gravity="center"
                    android:text="@string/delete" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
