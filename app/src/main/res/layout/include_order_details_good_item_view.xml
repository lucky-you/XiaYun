<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fafafa"
    android:orientation="vertical">

    <View style="@style/DivideLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_good_imageView"
            android:layout_width="@dimen/spacing_70"
            android:layout_height="@dimen/spacing_70"
            android:layout_marginLeft="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_12"
            android:layout_marginBottom="@dimen/spacing_12"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_good_default_image">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_12"
            android:layout_marginRight="@dimen/spacing_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_good_name"
                style="@style/TextViewStyleOf14Sp"
                android:layout_marginRight="@dimen/spacing_20"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/good_text_name"
                android:textColor="@color/color_3f3f3f_black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4">

                <TextView
                    android:id="@+id/tv_good_specifications"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/spacing_4"
                    android:text="@string/the_text_specifications"
                    android:textColor="@color/color_6f6f6f_black"
                    android:textSize="@dimen/tv_11sp" />

                <TextView
                    android:id="@+id/tv_good_number"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/spacing_6"
                    android:gravity="center_vertical"
                    android:text="x1"
                    android:textColor="@color/color_9f9f9f_black"
                    android:textSize="@dimen/tv_13sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_good_price"
                style="@style/TextViewStyleOf14Sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_4"
                android:gravity="center_vertical"
                android:text="@string/the_price"
                android:textColor="@color/color_3f3f3f_black" />


        </LinearLayout>
    </LinearLayout>

    <View style="@style/DivideLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_12"
        android:layout_marginRight="@dimen/spacing_16"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_centerVertical="true"
                android:text="@string/Commodity_prices"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_Commodity_prices"
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/the_price"
                android:textSize="@dimen/tv_13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8">

            <TextView
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_centerVertical="true"
                android:text="@string/Express_freight_two"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_Express_freight_two"
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/the_price"
                android:textSize="@dimen/tv_13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Share_activity_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8">

            <TextView
                android:id="@+id/tv_Share_activity_preferences"
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_centerVertical="true"
                android:text="@string/Share_activity_preferences"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_Share_activity_preferences_money"
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/the_price"
                android:textSize="@dimen/tv_13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Share_coupons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8">

            <TextView
                android:id="@+id/tv_Share_coupons"
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_centerVertical="true"
                android:text="@string/Share_coupons"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_Share_coupons_price"
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/the_price"
                android:textSize="@dimen/tv_13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8">

            <TextView
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_centerVertical="true"
                android:text="@string/The_payment_amount"
                android:textColor="@color/color_6f6f6f_black"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_The_payment_amount_money"
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/the_price"
                android:textColor="@color/color_6f6f6f_black"
                android:textSize="@dimen/tv_13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginBottom="@dimen/spacing_12">

            <TextView
                android:id="@+id/tv_Buyer_message_two"
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_centerVertical="true"
                android:text="@string/Buyer_message_two"
                android:textColor="@color/color_6f6f6f_black"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_Apply_for_after_sales"
                style="@style/TextViewOf9f9f9fColorStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_black_1dp_background"
                android:gravity="center"
                android:paddingLeft="@dimen/spacing_2"
                android:paddingRight="@dimen/spacing_2"
                android:text="@string/Apply_for_after_sales"
                android:textColor="@color/color_6f6f6f_black"
                android:textSize="@dimen/tv_12sp"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
