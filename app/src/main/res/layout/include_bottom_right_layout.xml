<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom_right_Layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="@dimen/spacing_10"
    android:layout_marginBottom="@dimen/dp_40"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/spacing_44"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_to_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:src="@drawable/ic_sell_lots_details_to_top"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_current_item_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:background="@drawable/shape_details_circle_background"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_current_number"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color_3f3f3f_black" />

                <View
                    style="@style/DivideLineStyle"
                    android:background="@color/color_6f6f6f_black" />

                <TextView
                    android:id="@+id/tv_total_number_size"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="0" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shop_car_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:layout_marginTop="@dimen/spacing_10"
            android:background="@drawable/ic_sell_lots_details_shop_car">

            <TextView
                android:id="@+id/tv_have_save_car_number"
                style="@style/TextViewStyleOf14Sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/spacing_8"
                android:layout_marginRight="@dimen/spacing_8"
                android:background="@drawable/shape_red_circle_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_10sp"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
