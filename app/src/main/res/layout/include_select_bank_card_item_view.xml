<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_44"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginRight="@dimen/spacing_16">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_bank_logo"
            android:layout_width="@dimen/spacing_22"
            android:layout_height="@dimen/spacing_22"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_good_default_image" />

        <TextView
            android:id="@+id/tv_bank_name"
            style="@style/TextViewStyleOf14Sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_10"
            android:text="@string/app_name"
            android:textColor="@color/color_3f3f3f_black"
            android:textSize="@dimen/tv_14sp" />

    </LinearLayout>

</LinearLayout>
