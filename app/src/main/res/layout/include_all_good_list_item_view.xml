<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fafafa"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/civ_good_photo"
            android:layout_width="@dimen/spacing_70"
            android:layout_height="@dimen/spacing_70"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/spacing_12"
            android:layout_marginLeft="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_12"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_good_default_image" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_12"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_good_name"
                style="@style/TextViewStyleOf14Sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/good_text_name"
                android:textColor="@color/color_3f3f3f_black" />


            <TextView
                android:id="@+id/tv_good_specifications"
                style="@style/TextViewStyleOf14Sp"
                android:layout_marginTop="@dimen/spacing_8"
                android:text="@string/the_text_specifications"
                android:textColor="@color/color_6f6f6f_black"
                android:textSize="@dimen/tv_11sp" />

            <TextView
                android:id="@+id/tv_good_price"
                style="@style/TextViewStyleOf14Sp"
                android:layout_marginTop="@dimen/spacing_4"
                android:text="@string/the_price"
                android:textColor="@color/color_e53d3d" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_16"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_good_number"
                style="@style/TextViewStyleOf14Sp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/spacing_8"
                android:text="x1"
                android:textColor="@color/color_9f9f9f_black"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_Refund_status"
                style="@style/TextViewStyleOf14Sp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/spacing_8"
                android:gravity="center_vertical"
                android:text="@string/have_Refund_application"
                android:textColor="@color/color_ecaa08"
                android:textSize="@dimen/tv_12sp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/Divide_line"
        style="@style/DivideLineStyle" />

</LinearLayout>
