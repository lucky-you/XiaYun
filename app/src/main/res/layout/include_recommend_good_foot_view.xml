<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_to_sea_more_goods"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_10"
    android:layout_marginLeft="@dimen/spacing_10"
    android:layout_marginRight="@dimen/spacing_10"
    android:layout_marginTop="@dimen/spacing_1"
    app:cardCornerRadius="0dp">


    <RelativeLayout
        android:layout_width="@dimen/spacing_98"
        android:layout_height="@dimen/spacing_98">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_home_heat_more_good_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/To_view_more" />

                <ImageView
                    android:layout_width="@dimen/spacing_7"
                    android:layout_height="@dimen/spacing_12"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_home_heat_arrow_default" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
