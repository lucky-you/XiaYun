<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <include layout="@layout/include_titlebar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f3f3f3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_16"
            android:background="@drawable/shape_white_5dp_background"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edit_Personalized_signature_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_130"
                android:background="@null"
                android:gravity="left"
                android:hint="@string/Personalized_signature_prompt"
                android:padding="@dimen/spacing_10"
                android:textColorHint="@color/color_e4e4e4"
                android:textSize="@dimen/tv_13sp" />

            <TextView
                android:id="@+id/tv_Signature_number"
                style="@style/TextViewStyleOf14Sp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginBottom="@dimen/spacing_10"
                android:layout_marginRight="@dimen/spacing_10"
                android:text="0/0"
                android:textColor="@color/color_9f9f9f_black" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_save"
            style="@style/RelativeLayoutStyleOf44dp"
            android:layout_marginTop="@dimen/spacing_30"
            android:background="@color/color_e53d3d"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_16sp" />


    </LinearLayout>

</LinearLayout>