<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_refund_money_step_view_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_90"
    android:background="@drawable/ic_examine_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_refund_status"
        style="@style/TextViewStyleOf14Sp"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_12"
        android:text="@string/Submit_an_application"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginRight="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_4"
            android:layout_marginLeft="@dimen/spacing_40"
            android:layout_marginRight="@dimen/spacing_40"
            android:layout_marginTop="@dimen/spacing_5"
            android:background="@drawable/shape_refund_money_white_background"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_Submit_an_application"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_refund_complete_background" />

                <TextView
                    android:id="@+id/tv_Submit_an_application"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:gravity="center"
                    android:text="@string/Submit_an_application"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_The_review_of_the_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_refund_complete_circle__background" />

                <TextView
                    android:id="@+id/tv_The_review_of_the_service"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:gravity="center"
                    android:text="@string/The_review_of_the_service"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_Fast_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_refund_complete_circle__background" />

                <TextView
                    android:id="@+id/tv_Fast_money"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:gravity="center"
                    android:text="@string/Fast_money"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_Refund_to_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_refund_complete_circle__background" />

                <TextView
                    android:id="@+id/tv_Refund_to_complete"
                    style="@style/TextViewStyleOf14Sp"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:gravity="center"
                    android:text="@string/Refund_to_complete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_12sp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
