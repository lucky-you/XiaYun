<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_good_have_address_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_ander_img_small"
    android:orientation="horizontal"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_address_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/spacing_24"
        android:src="@drawable/ic_order_address_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_address_icon"
        android:layout_alignRight="@+id/iv_to_more_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_30"
        android:layout_marginRight="@dimen/spacing_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_The_consignee_name"
                style="@style/TextViewStyleOf14Sp"
                android:layout_gravity="center_vertical"
                android:text="@string/The_consignee"
                android:textColor="@color/color_3f3f3f_black" />

            <TextView
                android:id="@+id/tv_phone_number"
                style="@style/TextViewStyleOf14Sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_52"
                android:text="130****1234"
                android:textColor="@color/color_3f3f3f_black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_Shipping_address"
            style="@style/TextViewStyleOf14Sp"
            android:layout_marginTop="@dimen/tv_12sp"
            android:text="@string/Shipping_address"
            android:textColor="@color/color_3f3f3f_black"
            android:textSize="@dimen/tv_12sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_to_more_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/spacing_16"
        android:src="@drawable/ic_order_details_more_n" />


</RelativeLayout>
